{
  "name": "gambino-system",
  "version": "1.0.0",
  "description": "Gambino Coin - Luck Mining System",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "testing"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:testing": "cd testing && npm run dev",
    "test:simulation": "cd testing && npm run simulate",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../testing && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules testing/node_modules",
    "clean-install": "npm run clean && npm run install-all",
    "build": "cd frontend && npm run build",
    "start": "concurrently \"cd backend && npm start\" \"cd frontend && npm start\"",
    "lint": "cd frontend && npm run lint && cd ../backend && npm run lint",
    "backend-only": "cd backend && npm run dev",
    "frontend-only": "cd frontend && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
