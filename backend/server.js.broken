        status: 'completed',
        txHash: `admin_onboard_${Date.now()}_${user._id}`,
        metadata: {
          adminOnboarding: true,
          adminId: req.admin._id.toString(),
          storeId
        }
      });

      await transaction.save();
    }

    await user.save();

    console.log(`üë®‚Äçüíº Admin ${req.admin.email} onboarded user: ${email} at store ${storeId}`);

    res.status(201).json({
